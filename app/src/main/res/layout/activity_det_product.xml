<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/coloBG"
    tools:context=".views.product.DetProductActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageViewDetProduct"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/instruction_alto_1" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0">
                    <TableRow>
                        <TextView
                            android:id="@+id/textViewDetProductName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title Product"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="8dp"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/textViewDetProductPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 1.000.000"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="8dp"
                            android:textStyle="bold"
                            android:textSize="21sp" />
                    </TableRow>
                </TableLayout>
                <TextView
                    android:id="@+id/textViewDetProductDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Desc"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recShoeSize"
                    android:layout_marginHorizontal="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>