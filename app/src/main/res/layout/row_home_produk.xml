<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootRowProduct"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageViewProduk"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/instruction_alto_1" />
       <TextView
           android:id="@+id/textViewProdukName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Nama Produk"
           android:textSize="18sp"
           android:textStyle="bold"/>
       <TextView
           android:id="@+id/textViewProdukKategori"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Kategori"
           android:textSize="16sp"/>
        <TextView
            android:id="@+id/textViewProdukHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Rp 120.000"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>